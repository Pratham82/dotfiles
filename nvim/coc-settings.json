{
  "coc.preferences.formatOnSaveFiletypes": [
    "markdown",
    "javascript",
    "typescript",
    "graphql",
    "html",
    "yaml",
    "json",
    "python",
    "javascriptreact",
    "typescriptreact",
    "typescript.tsx",
    "java",
    "vim",
    "go",
    "html",
    "css",
    "scss",
    "yaml"
  ],
  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "snippets.extends": {
    "cpp": ["c"],
    "javascriptreact": ["javascript"],
    "javascript": ["javascriptreact"],
    "typescript": ["javascript"],
    "typescriptreact": ["typescriptreact"],
    "typescriptreact": ["typescript"]
  },

  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.arrowParens": "avoid",

  // python config
  "python.linting.enabled": true,
  "python.linting.pylintEnabled": true,
  "snippets.ultisnips.directories": ["UltiSnips", "~/.config/nvim/utils/snips"],
  // explorer
  "explorer.width": 25,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings": {
    "<cr>": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
  },
  "clangd.path": "/home/pratham82/.config/coc/extensions/coc-clangd-data/install/10.0.0/clangd_10.0.0/bin/clangd",
  "explorer.buffer.showHiddenBuffers": true,
  "explorer.file.showHiddenFiles": true,
  "coc.source.emoji.filetypes": ["markdown", "javascript", "javascriptreact"],
  "coc.source.emoji.triggerCharacters": [":"],
  "typescript.showUnused": false
}
